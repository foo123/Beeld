{
"settings":{
    "Xpresion": "Xpresion::",
    "RegExp": "RegExp::" 
},

"plugins":[
    {"doc": "!plg:doc"}
],

"tasks":[
    
    {"build":[
        
        {"src":[
             "!tpl:umd-header-single.tpl.js"
            ,"./src/header.js"
            ,"./src/utils.js"
            ,"./src/event.js"
            ,"./src/pb.js"
            ,"./src/cache.js"
            ,"./src/types.js"
            ,"./src/model.js"
            ,"./src/view.js"
            ,"./src/footer.js"
            ,"./src/jquery.modelview.js"
            ,"!tpl:umd-footer.tpl.js"
        ]},
        
        {"header": "./src/header.js"},
        
        {"replace":[
             {"@@ROOT@@": "this"}
            ,{"@@EXPORTS@@": "exports"}
            ,{"@@MODULE_NAME@@": "ModelView"}
            ,{"@@VERSION@@": "0.51"}
            ,{"@@DATE@@": "Xpresion::date(\"Y-m-d H:i:s\")"}
        ]},
        
        {"process-shell":[
             "echo ^/^*^*[DOC_MARKDOWN] >> ${IN}"
            ,"echo documentation >> ${IN}"
            ,"echo [/DOC_MARKDOWN]^*^*^/ >> ${IN}"
            ,"type ${IN} > ${OUT}"
        ]},
        
        {"doc":{
             "startdoc": "/**[DOC_MARKDOWN]"
            ,"enddoc": "[/DOC_MARKDOWN]**/"
            ,"trim": "RegExp::^\\s*\\*[ ]?"
            ,"output": "./test-doc.md"
        }},
        
        {"process-shell":[
             "echo ^/^/ postprocessed >> ${IN}"
            ,"echo ^/^/ postprocessed2 >> ${IN}"
            ,"type ${IN} > ${OUT}"
        ]},
        
        {"out": "./build/modelview.js"}
    ]},
    
    {"minify":[
        
        {"src":[
            "./build/modelview.js"
        ]},
        
        {"minify":{
             "uglifyjs":[
                "-m -c"
            ]
            ,"closure":[
                "--language_in=ECMASCRIPT5_STRICT"
            ]
            ,"yui":[
                "--preserve-semi"
            ]
        }},
        
        {"process-shell":[
             "echo ^/^/ postprocessed >> ${IN}"
            ,"echo ^/^/ postprocessed2 >> ${IN}"
            ,"type ${IN} > ${OUT}"
        ]},
        
        {"out": "./build/modelview.min.js"}
    ]}
]
}